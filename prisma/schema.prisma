generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  name       String
  slug       String   @unique
  bio        String?
  avatar     String?
  themeColor String   @default("#6366f1")
  links      Link[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([slug])
  @@index([email])
}

model Link {
  id        String   @id @default(uuid())
  title     String
  url       String
  active    Boolean  @default(true)
  order     Int      @default(0)
  type      String?  // 'regular' | social platform types
  icon      String?  // Lucide icon name
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  clicks    Click[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([order])
  @@index([type])
}

model Click {
  id        String   @id @default(uuid())
  linkId    String
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)
  clickedAt DateTime @default(now())

  @@index([linkId])
}
